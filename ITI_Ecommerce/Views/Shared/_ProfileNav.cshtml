<style>
        .nav_profile {
            width: 220px;
            padding: 20px;
            background: linear-gradient(135deg, #f0f4f8, #dbe4ea); /* Gradient background */
            border-radius: 10px;
            align-items:center;
            justify-content:center;
        }

        .nav-pills_profile {
            list-style: none;
        }

        .nav-item_profile {
            margin-bottom: 12px;
            transition: margin-left 0.3s ease;
            width:100%;
        }

        .nav-link_profile {
            display: block;
            padding: 12px 15px;
            color: #333;
            font-size: 16px;
            font-weight: 500;
            text-decoration: none;
            border-radius: 8px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
        }

        .nav-link_profile:hover {
            background-color: #153d58;
            color: #ffffff; 
        }

        .nav-link_profile.active {
            background-color: #153d58;
            color: white;
        }

        
    </style>

<ul class="nav_profile nav-pills_profile nav-pills flex-column">
    <li class="nav-item_profile nav-item"><a class="nav-link_profile nav-link" href="/UserProfile/GetUserProfile">Profile</a></li>
    <li class="nav-item_profile nav-item"><a class="nav-link_profile nav-link" href="/UserOrder/UserOrders">My Orders</a></li>
</ul>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const currentUrl = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {

            if (link.getAttribute('href') === currentUrl) {
                link.classList.add('active');
            }
            else{
                link.classList.remove('active');
            }
        });
    });
</script>


